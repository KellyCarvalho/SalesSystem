@{
    ViewData["Title"] = "Login";
    Layout = null;
}


@model SalesSystem.Models.LoginViewModel
<link href="~/css/login.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent"> 
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">

         
            <img id="icon" src="~/img/logo.png" alt="Logo" />

        </div>

        <!-- Login Form -->
        <form asp-controller="Login" asp-action="Index" method="post">
            <input asp-for="Email" type="text">
            <br />
            <span asp-validation-for="Email"></span>
            <br />
            <input asp-for="Password" type="text">
            <br />
            <span asp-validation-for="Password"></span>
            <br />
            <input type="submit">
            <br />

            <span>  @ViewData["Message"]</span>
          

        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>